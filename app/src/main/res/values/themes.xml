<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Apotek" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_btn</item>
        <item name="colorPrimaryDark">@color/text_main</item>
        <item name="colorAccent">@color/text_sub</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Apotek.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Apotek.Dashboard">
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>