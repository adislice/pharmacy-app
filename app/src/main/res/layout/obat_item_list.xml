<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="15dp"
    app:cardElevation="0dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/transparent"
    app:cardBackgroundColor="@color/transparent">

    <xyz.peridy.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_angle="30"
        app:shimmer_duration="250">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <View
                android:id="@+id/view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/shimmerBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="152dp"
                android:layout_height="14dp"
                android:background="@color/shimmerBackground"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/pad_sm"/>

            <View
                android:id="@+id/view2"
                android:layout_width="122dp"
                android:layout_height="14dp"
                android:layout_marginStart="@dimen/pad_sm"
                android:background="@color/shimmerBackground"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:layout_marginTop="@dimen/pad_md"/>


            <View
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:background="@color/shimmerBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:layout_marginTop="@dimen/pad_md"/>

        </android.support.constraint.ConstraintLayout>
    </xyz.peridy.shimmerlayout.ShimmerLayout>

            <RelativeLayout
                android:id="@+id/layout_nyata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="2dp">

                <ImageView
                    android:id="@+id/obat_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/obat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/obat_image"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="komik"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/obat_jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obat_name"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/obat_image"
                    android:fontFamily="@font/montserrat"
                    android:text="sirup"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/obat_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obat_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/montserrat"
                    android:text="5000"
                    android:textSize="14sp" />

            </RelativeLayout>

</android.support.v7.widget.CardView>
